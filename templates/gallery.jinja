<!DOCTYPE html>
<html>
  <head>
    <title>
      {% if title %}
        {{ title }} &mdash;
      {% endif %}
      Jonas van den Berg
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" href="/static/styles/normalize.css">
    <link rel="stylesheet" href="/static/styles/fonts.css">
    <link rel="stylesheet" href="/static/styles/index.css">
  </head>
  <body>
    <div id="app" class="blurred">
      <div class="app-content">
        <nav id="navigation" class="is-compact2">
          <div class="navigation-content">
            <ul class="menu left">
              <li class="{{ 'selected' if menu_item == 'index' }}">
                <a href="/" draggable="false">Portfolio</a>
              </li>
              <li class="{{ 'selected' if menu_item == 'digital' }}">
                <a href="/digital" draggable="false">Digital</a>
              </li>
              <li class="{{ 'selected' if menu_item == 'film' }}">
                <a href="/film" draggable="false">Film</a>
              </li>
            </ul>
            <ul class="menu center">
              <li>
                <a href="" class="button action-left invisible">
                  <i class="arrow-left"></i>
                </a>
              </li><li id="live-title">
                <a href="" class="button action-center">
                  <span class="live-title-content"></span>
                </a>
              </li><li>
                <a href="" class="button action-right invisible">
                  <i class="arrow-right"></i>
                </a>
              </li>
            </ul>
            <ul class="menu right">
              <li><a href="/about" draggable="false">About</a></li>
            </ul>
          </div>
        </nav>
        <main id="main">
          <div id="gallery">
            {% include "components/gallery2.jinja" %}
            <div style="color:#aaa;font-size:10pt;text-align:center;padding-top:3rem;">
              All images are my own.
              Copyright <span style="font-family:sans-serif">&copy;</span>
              Jonas van den Berg
            </div>
          </div>
        </main>
        <div id="viewer-close">
          <a href="" class="button action-close" title="close the viewer">
            <div class="cross-mark"></div>
          </a>
        </div>
        <div id="viewer">
          <div class="viewer-content">

          </div>
        </div>
        <div id="viewer-hint">
          <span class="hint-text">scroll or use the arrow keys to navigate &mdash; escape to close</span>
          <br>
          <span class="hint-text">
            <span style="color:#aaa;font-size:10pt">
              All images are my own.
              Copyright <span style="font-family:sans-serif">&copy;</span>
              Jonas van den Berg
            </span>
          </span>
          <!--&mdash;
          <a class="button hover-underlines">dismiss</a>-->
        </div>
      </div>
    </div>
    <script>document.querySelector('#app').classList.remove('nojs');</script>
    <script src="/static/scripts/app.js"></script>
  </body>
</html>
