root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.html,*.jinja,*.js,*.ts,*.css}]
indent_style = space
indent_size = 2

[{*.txt,Makefile}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[CNAME]
insert_final_newline = false
